<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRandomKarts">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/random_build_title"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/karts_charImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsCharImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_frameImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_charImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsCharImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_frameImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_charImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsCharImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_frameImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_charImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsCharImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_frameImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_frameImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsFrameImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_wheelImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_charImage1"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_frameImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsFrameImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_wheelImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_charImage2"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_frameImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsFrameImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_wheelImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_charImage3"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_frameImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsFrameImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_wheelImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_charImage4"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_wheelImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsWheelImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_gliderImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_frameImage1"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_wheelImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsWheelImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_gliderImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_frameImage2"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_wheelImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsWheelImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_gliderImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_frameImage3"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_wheelImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsWheelImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/karts_gliderImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_frameImage4"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_gliderImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsGliderImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_wheelImage1"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_gliderImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsGliderImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_wheelImage1"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_gliderImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsGliderImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_wheelImage3"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/karts_gliderImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="kartsGliderImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/karts_wheelImage4"
                app:layout_constraintTop_toBottomOf="@+id/karts_playerText4"
                app:srcCompat="@drawable/invisible" />

            <TextView
                android:id="@+id/karts_playerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player1"
                android:textColor="#7EC72F"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/karts_playerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#008CFD"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_frameImage1" />

            <TextView
                android:id="@+id/karts_playerText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#D700FD"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_frameImage2" />

            <TextView
                android:id="@+id/karts_playerText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#FD9800"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/karts_frameImage3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>