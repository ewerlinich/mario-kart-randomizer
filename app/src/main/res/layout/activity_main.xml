<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/with_bike_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="withBikes4"
        android:text="@string/withBikesButton4"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/with_bike_button3"
        app:layout_constraintTop_toBottomOf="@+id/no_bike_button4" />

    <Button
        android:id="@+id/with_bike_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="withBikes3"
        android:text="@string/withBikesButton3"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/with_bike_button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/with_bike_button2"
        app:layout_constraintTop_toBottomOf="@+id/no_bike_button3" />

    <Button
        android:id="@+id/with_bike_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="withBikes2"
        android:text="@string/withBikesButton2"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/with_bike_button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/with_bike_button"
        app:layout_constraintTop_toBottomOf="@+id/no_bike_button2" />

    <Button
        android:id="@+id/no_bike_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="noBikes"
        android:text="@string/noBikesButton"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/with_bike_button"
        app:layout_constraintEnd_toStartOf="@+id/no_bike_button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/no_bike_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#CA0000"
        android:onClick="noBikes2"
        android:text="@string/noBikesButton2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/no_bike_button"
        app:layout_constraintEnd_toStartOf="@+id/no_bike_button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/no_bike_button"
        app:layout_constraintTop_toTopOf="@+id/no_bike_button" />

    <Button
        android:id="@+id/no_bike_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#CA0000"
        android:onClick="noBikes4"
        android:text="@string/noBikesButton4"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/no_bike_button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/no_bike_button3"
        app:layout_constraintTop_toTopOf="@+id/no_bike_button3" />

    <Button
        android:id="@+id/no_bike_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#CA0000"
        android:onClick="noBikes3"
        android:text="@string/noBikesButton3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/no_bike_button2"
        app:layout_constraintEnd_toStartOf="@+id/no_bike_button4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/no_bike_button2"
        app:layout_constraintTop_toTopOf="@+id/no_bike_button2" />

    <Button
        android:id="@+id/with_bike_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="withBikes"
        android:text="@string/withBikesButton"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/with_bike_button2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/mario_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/Mario_pic_description"
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:translationY="-35dp"
        app:layout_constraintBottom_toTopOf="@+id/no_bike_button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomizer_logo"
        app:srcCompat="@drawable/mario_kart_8_deluxe_mario_artwork" />

    <ImageView
        android:id="@+id/randomizer_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/logo_pic_description"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toTopOf="@+id/mario_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_randomizer" />

</androidx.constraintlayout.widget.ConstraintLayout>