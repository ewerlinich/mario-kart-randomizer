<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRandomAll">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/random_build_title"
        android:textAllCaps="false"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/all_charImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="charImage1a"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_frameImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_charImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="charImage1b"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_frameImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_charImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="charImage1c"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_frameImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_charImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="charImage1d"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_frameImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_frameImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="frameImage1a"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_wheelImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_charImage1"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_frameImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="frameImage1b"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_wheelImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_charImage2"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_frameImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="frameImage1c"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_wheelImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_charImage3"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_frameImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="frameImage1d"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_wheelImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_charImage4"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_wheelImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="wheelImage1a"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_gliderImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_frameImage1"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_wheelImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="wheelImage1b"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_gliderImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_frameImage2"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_wheelImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="wheelImage1c"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_gliderImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_frameImage3"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_wheelImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="wheelImage1d"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/all_gliderImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_frameImage4"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_gliderImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="gliderImage1a"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_wheelImage1"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_gliderImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="gliderImage1b"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_wheelImage2"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_gliderImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="gliderImage1c"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_wheelImage3"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/all_gliderImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="gliderImage1d"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/all_wheelImage4"
                app:layout_constraintTop_toBottomOf="@+id/all_playerText4"
                app:srcCompat="@drawable/invisible" />

            <TextView
                android:id="@+id/all_playerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/player1"
                android:textColor="#7EC72F"
                android:textScaleX="1.85"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/all_playerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#008CFD"
                android:textScaleX="1.85"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_frameImage1" />

            <TextView
                android:id="@+id/all_playerText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#D700FD"
                android:textScaleX="1.85"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_frameImage2" />

            <TextView
                android:id="@+id/all_playerText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#FD9800"
                android:textScaleX="1.85"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/all_frameImage3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>