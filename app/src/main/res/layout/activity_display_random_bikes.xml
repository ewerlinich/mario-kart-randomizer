<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/randomizer_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRandomBuilds">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:text="@string/random_build_title"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/build_scroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/build_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/char_image_p1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/char_image_p1_description"
                android:onClick="charImage1"
                app:layout_constraintBottom_toTopOf="@id/player_text_p2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/frame_image_p1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_text_p1"
                app:srcCompat="@drawable/invisible"
                tools:layout_editor_absoluteY="22dp" />

            <ImageView
                android:id="@+id/char_image_p2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/char_image_p2_description"
                android:onClick="charImage2"
                app:layout_constraintBottom_toTopOf="@id/player_text_p3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/frame_image_p2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_text_p2"
                app:srcCompat="@drawable/invisible"
                tools:layout_editor_absoluteY="2dp" />

            <ImageView
                android:id="@+id/char_image_p3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/char_image_p3_description"
                android:onClick="charImage3"
                app:layout_constraintBottom_toTopOf="@id/player_text_p4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/frame_image_p3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_text_p3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/char_image_p4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/char_image_p4_description"
                android:onClick="charImage4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/frame_image_p4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_text_p4"
                app:srcCompat="@drawable/invisible"
                tools:layout_editor_absoluteY="111dp" />

            <ImageView
                android:id="@+id/frame_image_p1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/frame_image_p1_description"
                android:onClick="frameImage1"
                app:layout_constraintBottom_toTopOf="@id/player_text_p2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/wheel_image_p1"
                app:layout_constraintStart_toEndOf="@id/char_image_p1"
                app:layout_constraintTop_toBottomOf="@id/player_text_p1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/frame_image_p2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/frame_image_p2_description"
                android:onClick="frameImage2"
                app:layout_constraintBottom_toTopOf="@id/player_text_p3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/wheel_image_p2"
                app:layout_constraintStart_toEndOf="@id/char_image_p2"
                app:layout_constraintTop_toBottomOf="@id/player_text_p2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/frame_image_p3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/frame_image_p3_description"
                android:onClick="frameImage3"
                app:layout_constraintBottom_toTopOf="@id/player_text_p4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/wheel_image_p3"
                app:layout_constraintStart_toEndOf="@id/char_image_p3"
                app:layout_constraintTop_toBottomOf="@id/player_text_p3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/frame_image_p4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/frame_image_p4_description"
                android:onClick="frameImage4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/wheel_image_p4"
                app:layout_constraintStart_toEndOf="@id/char_image_p4"
                app:layout_constraintTop_toBottomOf="@id/player_text_p4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/wheel_image_p1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/wheel_image_p1_description"
                android:onClick="wheelImage1"
                app:layout_constraintBottom_toTopOf="@id/player_text_p2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/glider_image_p1"
                app:layout_constraintStart_toEndOf="@id/frame_image_p1"
                app:layout_constraintTop_toBottomOf="@id/player_text_p1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/wheel_image_p2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/wheel_image_p2_description"
                android:onClick="wheelImage2"
                app:layout_constraintBottom_toTopOf="@id/player_text_p3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/glider_image_p2"
                app:layout_constraintStart_toEndOf="@id/frame_image_p2"
                app:layout_constraintTop_toBottomOf="@id/player_text_p2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/wheel_image_p3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/wheel_image_p3_description"
                android:onClick="wheelImage3"
                app:layout_constraintBottom_toTopOf="@id/player_text_p4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/glider_image_p3"
                app:layout_constraintStart_toEndOf="@id/frame_image_p3"
                app:layout_constraintTop_toBottomOf="@id/player_text_p3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/wheel_image_p4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/wheel_image_p4_description"
                android:onClick="wheelImage4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/glider_image_p4"
                app:layout_constraintStart_toEndOf="@id/frame_image_p4"
                app:layout_constraintTop_toBottomOf="@id/player_text_p4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/glider_image_p1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/glider_image_p1_description"
                android:onClick="gliderImage1"
                app:layout_constraintBottom_toTopOf="@id/player_text_p2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wheel_image_p1"
                app:layout_constraintTop_toBottomOf="@id/player_text_p1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/glider_image_p2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/glider_image_p2_description"
                android:onClick="gliderImage2"
                app:layout_constraintBottom_toTopOf="@id/player_text_p3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wheel_image_p2"
                app:layout_constraintTop_toBottomOf="@id/player_text_p2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/glider_image_p3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/glider_image_p3_description"
                android:onClick="gliderImage3"
                app:layout_constraintBottom_toTopOf="@id/player_text_p4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wheel_image_p3"
                app:layout_constraintTop_toBottomOf="@id/player_text_p3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/glider_image_p4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/glider_image_p4_description"
                android:onClick="gliderImage4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wheel_image_p4"
                app:layout_constraintTop_toBottomOf="@id/player_text_p4"
                app:srcCompat="@drawable/invisible" />

            <TextView
                android:id="@+id/player_text_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/player1"
                android:textColor="#7EC72F"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintBottom_toTopOf="@id/char_image_p1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/player_text_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank"
                android:textColor="#008CFD"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/char_image_p2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/char_image_p1"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/player_text_p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank"
                android:textColor="#D700FD"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/char_image_p3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/char_image_p2"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/player_text_p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank"
                android:textColor="#FD9800"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/char_image_p4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/char_image_p3"
                tools:layout_editor_absoluteY="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>