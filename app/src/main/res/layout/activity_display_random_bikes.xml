<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRandomBikes">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/random_build_title"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bikes_charImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesCharImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_frameImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_charImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesCharImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_frameImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_charImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesCharImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_frameImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_charImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesCharImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_frameImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_frameImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesFrameImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_wheelImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_charImage1"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_frameImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesFrameImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_wheelImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_charImage2"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_frameImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesFrameImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_wheelImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_charImage3"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_frameImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesFrameImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_wheelImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_charImage4"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_wheelImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesWheelImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_gliderImage1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_frameImage1"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_wheelImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesWheelImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_gliderImage2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_frameImage2"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_wheelImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesWheelImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_gliderImage3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_frameImage3"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_wheelImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesWheelImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/bikes_gliderImage4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_frameImage4"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText4"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_gliderImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesGliderImage1"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_wheelImage1"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText1"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_gliderImage2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesGliderImage2"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_wheelImage1"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText2"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_gliderImage3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesGliderImage3"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_wheelImage3"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText3"
                app:srcCompat="@drawable/invisible" />

            <ImageView
                android:id="@+id/bikes_gliderImage4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="bikesGliderImage4"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bikes_wheelImage4"
                app:layout_constraintTop_toBottomOf="@+id/bikes_playerText4"
                app:srcCompat="@drawable/invisible" />

            <TextView
                android:id="@+id/bikes_playerText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player1"
                android:textColor="#7EC72F"
                android:textSize="18sp"
                app:fontFamily="@font/russo_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bikes_playerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#008CFD"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_frameImage1" />

            <TextView
                android:id="@+id/bikes_playerText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#D700FD"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_frameImage2" />

            <TextView
                android:id="@+id/bikes_playerText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/blank"
                android:textColor="#FD9800"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bikes_frameImage3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>