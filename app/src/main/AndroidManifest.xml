<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ewer.mariokartcharacterrandomizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mario_kart_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mario_kart_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ewer.mariokartcharacterrandomizer.DisplayRandomAll"
            android:parentActivityName="com.ewer.mariokartcharacterrandomizer.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ewer.mariokartcharacterrandomizer.MainActivity" />
        </activity>
        <activity android:name="com.ewer.mariokartcharacterrandomizer.DisplayRandomKarts"
            android:parentActivityName="com.ewer.mariokartcharacterrandomizer.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ewer.mariokartcharacterrandomizer.MainActivity" />
        </activity>
        <activity android:name="com.ewer.mariokartcharacterrandomizer.DisplayRandomBikes"
            android:parentActivityName="com.ewer.mariokartcharacterrandomizer.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ewer.mariokartcharacterrandomizer.MainActivity" />
        </activity>
        <activity android:name="com.ewer.mariokartcharacterrandomizer.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>